<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:background">@drawable/my_shadow</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <!--   TextInputLayout      -->
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>

        <!-- <item firstName="android:translationY">-10dp</item> -->

    </style>
    <style name="ButtonNormalStyle">

        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>

    </style>



</resources>
